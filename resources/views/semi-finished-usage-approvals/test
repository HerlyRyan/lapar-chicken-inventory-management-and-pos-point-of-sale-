@push('scripts')
    <script>
        function approvalModals() {
            return {
                openModal: null,
                selectedId: null,
                selectedNumber: null,

                openApproveModal(id, number) {
                    this.selectedId = id;
                    this.selectedNumber = number;
                    this.openModal = 'approve';
                },

                openRejectModal(id, number) {
                    this.selectedId = id;
                    this.selectedNumber = number;
                    this.openModal = 'reject';
                },

                closeModal() {
                    this.openModal = null;
                    this.selectedId = null;
                    this.selectedNumber = null;
                }
            };
        }

        function approvalTable(items) {
            return {
                items: items,

                sortBy(col) {
                    // Implement sorting logic if needed
                }
            };
        }
    </script>
@endpush
